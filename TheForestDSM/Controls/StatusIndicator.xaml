<UserControl
    x:Class="TheForestDSM.Controls.StatusIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TheForestDSM.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Control"
    mc:Ignorable="d">
    <Rectangle
        x:Name="Indicator"
        Fill="{Binding IndicatorFillColor, ElementName=Control}"
        RadiusX="20"
        RadiusY="20"
        Stroke="{Binding IndicatorStrokeColor, ElementName=Control}"
        StrokeThickness="1" />
</UserControl>
